    "url": "git+https://github.com/lucid3ye/homebridge-roomb-o-matic.git"
  },
  "bugs": {
    "url": "https://github.com/lucid3ye/homebridge-roomb-o-matic/issues"
  },
  "keywords": [
    "homebridge-plugin",
