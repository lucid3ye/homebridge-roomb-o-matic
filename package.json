{
  "name": "homebridge-roomb-o-matic",
  "displayName": "Roomb-O-Matic",
  "version": "1.1.0",
  "description": "Roomba Homebridge plugin reimagined with O‑Matic Factory magic. True vacuum semantics, future-ready, brand-driven.",
  "author": "James Walker (O‑Matic Factory)",
  "license": "MIT",
  "homepage": "https://github.com/lucid3ye/homebridge-roomb-o-matic#readme",
  "repository": {
