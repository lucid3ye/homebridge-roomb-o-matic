{
  "pluginAlias": "RoombOMatic",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": { "type": "string", "default": "RoombOMatic", "title": "Platform Name" },
      "email": { "type": "string", "title": "iRobot Email" },
      "password": { "type": "string", "title": "iRobot Password" },
      "debug": { "type": "boolean", "default": false, "title": "Enable Debug Logging" },
      "devices": {
        "type": "array",
        "title": "Roombas",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "title": "Device Name" },
            "blid": { "type": "string", "title": "BLID (Roomba ID)" },
            "ip": { "type": "string", "title": "IP Address (Optional)" }
          },
          "required": ["name", "blid"]
        }
      }
    },
    "required": ["name", "devices"]
  }
}
