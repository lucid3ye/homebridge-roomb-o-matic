{
  "pluginAlias": "RoombOMatic",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Platform Name",
        "type": "string",
        "default": "RoombOMatic",
        "required": true
      },
      "email": {
        "title": "iRobot Account Email",
        "type": "string",
        "required": false
      },
      "password": {
        "title": "iRobot Account Password",
        "type": "string",
        "required": false
      },
      "debug": {
        "title": "Debug Mode",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "devices": {
        "type": "array",
        "title": "Roomba Devices",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Device Name",
              "type": "string",
              "required": true
            },
            "blid": {
              "title": "Robot BLID",
              "type": "string",
              "required": true
            },
            "robotpwd": {
              "title": "Robot Password",
              "type": "string",
              "required": true
            },
            "ipaddress": {
              "title": "Robot IP Address",
              "type": "string",
              "required": true
            }
          }
        }
      }
    }
  }
}
