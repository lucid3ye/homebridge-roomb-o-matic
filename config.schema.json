{
  "pluginAlias": "RoombOMatic",
  "pluginType": "platform",
  "schema": {
    "type": "object",
    "title": "Roomb-O-Matic Platform Configuration",
    "properties": {
      "name": {
        "type": "string",
        "title": "Platform Name",
        "default": "RoombOMatic"
      },
      "email": {
        "type": "string",
        "title": "iRobot Account Email (optional)"
      },
      "password": {
        "type": "string",
        "title": "iRobot Account Password (optional)"
      },
      "debug": {
        "type": "boolean",
        "title": "Enable Debug Logging",
        "default": false
      },
      "devices": {
        "type": "array",
        "title": "Roomba Devices",
        "items": {
          "type": "object",
          "title": "Device",
          "properties": {
            "name": {
              "type": "string",
              "title": "Name"
            },
            "blid": {
              "type": "string",
              "title": "BLID"
            },
            "ip": {
              "type": "string",
              "title": "Robot IP Address"
            },
            "password": {
              "type": "string",
              "title": "Robot Password"
            }
          },
          "required": ["name", "blid", "ip", "password"]
        }
      }
    },
    "required": ["devices"]
  }
}
